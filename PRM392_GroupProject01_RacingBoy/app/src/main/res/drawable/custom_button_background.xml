<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Background color when button is pressed -->
            <corners android:radius="50dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FF9800" /> <!-- Default background color -->
            <corners android:radius="50dp" />
        </shape>
    </item>
</selector>